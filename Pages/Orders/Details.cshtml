@page
@model SonseArt.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Adres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Adres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserPhone)
        </dd>
        <div class="row row-cols-1">
            @foreach (var item in Model.orderItems)
            {
                <div class="col mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-row align-items-center">
                                    <div class="ms-3">
                                        <h5>@item.ProductName</h5>
                                        <p class="small mb-0"></p>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center">
                                    <div style="width: 50px;">
                                        <h5 class="fw-normal mb-0">@item.Quantity</h5>
                                    </div>
                                    <div style="width: 80px;">
                                        <h5 class="mb-0">@item.ProductPrice</h5>
                                    </div>
                                    <form asp-page-handler="DeleteItem" class="ms-3">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
