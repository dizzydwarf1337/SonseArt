@page
@model SonseArt.Areas.Identity.Pages.Account.Manage.MyOrdersModel
@{
    <div class="container">
        <ul class="list-group">
            @foreach (var order in Model.MyOrders)
            {
                <li class="list-group-item">
                    <strong>Date:</strong> @order.date - <strong>Total Price:</strong> @order.OrderPrice
                    <ul class="list-group mt-2">
                        @foreach (var item in order.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.ProductName - Price:@item.ProductPrice - Quantity:@item.Quantity
                                <span class="badge badge-primary badge-pill">@item.ProductPrice</span>
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
}
